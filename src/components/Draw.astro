---

interface Props {
  draw: any;
  reverse: boolean
}

const { draw, reverse } = Astro.props;

let rowClass = "flex-col sm:flex sm:flex-row gap-8 sm:gap-4 py-10";
if( reverse ) {
    rowClass = "bg-yellow-100 flex flex-col flex-col-reverse sm:flex-row sm:flex-row-reverse gap-8 sm:gap-4 py-10"
}

---

<div class={rowClass}>
    <div class="flex justify-center sm:w-1/2">
        <img class="max-w-xs" src={draw.url} alt="lorem ipsum present">
    </div>
    <div class="flex flex-col sm:justify-center sm:w-1/2 px-4">
        {draw.description}
    </div>
</div>
