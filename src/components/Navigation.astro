---
import { Image } from "astro:assets";
import { DATA } from "../data/data";
import DarkModeToggleButton from "./DarkModeToggleButton.astro";

const featuredSponsors = DATA.sponsors.filter(
  (sponsor) => sponsor.tier === "gold" && sponsor.hasFeaturedPage,
);
---

<nav
  id="top"
  class="flex flex-wrap
  items-center justify-between w-full mx-auto max-w-[2000px] px-8 py-5 md:px-16 md:py-10 text-lg text-dark-background dark:text-light-background
  bg-white dark:bg-dark-background"
>
  <div class="w-full max-w-[150px] sm:max-w-[180px] md:max-w-[200px] max-xl:z-50">
    <a aria-label="Go to Home Page" href="/#top" class="h-10">
      <Image
        src="/logo.svg"
        alt={`Logo of ${DATA.title}`}
        class="brightness-100 dark:invert"
        height="40"
        width="200"
        loading="eager"
      />
    </a>
  </div>
  <div
    id="menu"
    class="
    w-full md:w-fot max-w-[700px]
    h-full
    ml-auto
    max-xl:fixed max-xl:top-0 max-xl:right-0 max-xl:z-40 max-xl:p-4
    max-xl:overflow-y-auto
    transition-transform max-xl:translate-x-full
    max-xl:bg-white max-xl:dark:bg-dark-background
    max-xl:duration-0"
    tabindex="-1"
  >
  <ul
      class="flex justify-evenly
      xl:gap-2 max-xl:gap-8
      max-xl:mt-28
      text-sm max-xl:flex-col xl:flex-row font-bold max-xl:gap-8"
    >
      {
        !!DATA.schedule.length && (
          <li class="mx-auto">
            <a
              aria-label="Go to Schedule"
              href="/#schedule"
              class="px-3 h-full cursor-pointer grid place-content-center hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg w-fit"
            >
              Schedule
            </a>
          </li>
        )
      }
      {
        !!DATA.speakers.length && (
          <li class="mx-auto">
            <a
              aria-label="Go to Speakers"
              href="/#speakers"
              class="px-3 h-full cursor-pointer grid place-content-center hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg w-fit"
            >
              Speakers
            </a>
          </li>
        )
      }
      {
        !!DATA.raffles.length && (
          <li class="mx-auto">
            <a
              aria-label="Go to Raffles Page"
              href="/raffles#top"
              class="px-3 h-full cursor-pointer grid place-content-center hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg w-fit"
            >
              Sorteos
            </a>
          </li>
        )
      }
      {
        !!DATA.faq.length && (
          <li class="mx-auto">
            <a
              aria-label="Go to FAQ"
              href="/#faq"
              class="px-3 h-full cursor-pointer grid place-content-center hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg w-fit"
            >
              FAQ
            </a>
          </li>
        )
      }
      {
        featuredSponsors.map((sponsor) => (
          <li class="mx-auto">
            <a
              aria-label={`Go to ${sponsor.name} Page`}
              href={`/sponsor/${sponsor.name}#top`}
              class="px-3 h-full cursor-pointer grid place-content-center hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg w-fit"
            >
              Meet {sponsor.name}
            </a>
          </li>
        ))
      }
      <li
        class="mx-auto cursor-pointer grid place-content-center hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg w-fit"
      >
        <a
          aria-label="Buy Tickets"
          href={DATA.ticketsUrl}
          target="_blank"
          class="text-white p-2 rounded-lg bg-green-600 hover:bg-green-400 dark:bg-blue-600 dark:hover:bg-blue-400 transition-colors"
          type="button">Comprar entradas</a
        >
      </li>
    </ul>
  </div>

  <div class="flex justify-evenly gap-2 z-40">
    <DarkModeToggleButton />
    <button id="menu-button" class="xl:hidden">
      <i class="ph ph-list text-3xl"></i>
    </button>
  </div>
</nav>
<script>
   function toggleMenu(button: Element , menu: Element) {
      const isOpen = !!button.attributes.getNamedItem("expanded");

      if (isOpen) {
        closeMenu(button, menu);
      } else {
        openMenu(button, menu);      
      }
    }

    function openMenu(button: Element, menu: Element) {
      menu?.classList.remove("max-xl:hidden");
      menu?.classList.remove("drawer-close-transition");
      menu?.classList.add("drawer-open-transition");

      menu?.setAttribute("aria-modal", "true");
      menu?.setAttribute("role", "dialog");

      button.innerHTML = `<i class="ph ph-x text-3xl"></i>`;
      button.setAttribute("expanded", "true");
    }

    function closeMenu(button: Element, menu: Element) {
      menu?.classList.add("drawer-close-transition");
      menu?.classList.remove("drawer-open-transition");

      menu?.removeAttribute("aria-modal");
      menu?.removeAttribute("role");

      button.removeAttribute("expanded");
      button.innerHTML = `<i class="ph ph-list text-3xl"></i>`;
    }

  function listenDrawerButton() {
    const button = document.querySelector("#menu-button"); // Hamburger Icon
    const menu = document.querySelector("#menu"); // Menu
    if (!menu || !button) return
    button?.addEventListener("click", () => {
      toggleMenu(button, menu);
    });

    document.querySelectorAll("nav ul > li > a").forEach((elem) => 
      elem.addEventListener("click", () => {
        closeMenu(button, menu);
      }
  )); // Menu

  }

  function init() {
    listenDrawerButton();
  }

  document.addEventListener("astro:page-load", init);
</script>

<style>
  @media not all and (max-width: 501px) {
      .drawer-open-transition {
        transition-duration: 500ms;
        transform: translate(0, 0);
      }
  }

  @media not all and (min-width: 500px) {
    .drawer-open-transition {
        opacity: 1;
        transform: translate(0, 0);
        transition: opacity 0.3s ease-in-out, transform 0ms ease-in-out;
    }

    .drawer-close-transition {
        opacity: 0;
        transition: opacity 0.25s ease-in-out, transform 0ms ease-in-out 0.25s;
    }
  }
</style>