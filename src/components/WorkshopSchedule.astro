---
import type { ScheduleEvent } from '../data/data.type';

interface Props {
    event: ScheduleEvent
}

const { event } = Astro.props;

---
<div class="flex bg-blue-50 dark:bg-blue-900 rounded-2xl md:w-1/2 py-6 px-6 gap-10">
    <div class="flex flex-col w-10 mt-1.5">
        <span class="text-sm text-blue-600 font-bold">{ event.time_start }</span>
        <span class="text-sm text-blue-600 font-bold">{ event.time_end }</span>
    </div>
    <div class="flex flex-col">
        <h4 class="text-xl font-medium">{ event.title }</h4>
        <h4 class="font-bold">{ event.subtitle }</h4>
        <p class="mt-4 dark:text-white font-medium text-grey-50">{ event.description }</p>
    </div>
</div>

